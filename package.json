{
  "name": "no.runely.jslogic",
  "version": "1.3.2",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.3.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "moment-timezone": "0.6.0"
  },
  "scripts": {
    "refresh": "rm -rf node_modules/ && rm package-lock.json && npm i",
    "build": "tsc --outDir build/",
    "test-check": "npx @biomejs/biome check",
    "test": "npx @biomejs/biome check && npm run build && env TZ=UTC jest",
    "fix": "npx @biomejs/biome check --write",
    "homey-run": "homey app run --clean --remote",
    "homey-install": "npm run test && homey app install",
    "homey-publish": "npm run test && homey app publish"
  },
  "repository": {
    "url": "https://github.com/runely/jslogic-homey"
  },
  "license": "GPL-3.0-or-later"
}
