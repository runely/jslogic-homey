{
  "name": "no.runely.jslogic",
  "version": "1.3.2",
  "main": "app.js",
  "devDependencies": {
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.3.4",
    "jest": "29.6.4",
    "standard": "17.0.0"
  },
  "dependencies": {
    "moment-timezone": "0.5.43"
  },
  "scripts": {
    "refresh": "rm -rf node_modules/ && rm package-lock.json && npm i",
    "test": "standard && env TZ=UTC jest",
    "fix": "standard --fix",
    "homey-run": "homey app run",
    "homey-install": "npm run test && homey app install",
    "homey-publish": "npm run test && homey app publish"
  },
  "repository": {
    "url": "https://github.com/runely/jslogic-homey"
  },
  "license": "GPL-3.0-or-later",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "testMatch": [
      "**/tests/**/*test.[jt]s?(x)",
      "**/?(*.)+.(spec|test).[jt]s?(x)"
    ]
  }
}
