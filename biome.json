{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.json", "!package*.json", "!app.json", "!.homeycompose/app.json"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "expand": "auto",
    "lineWidth": 120,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "expand": "auto",
      "bracketSpacing": true,
      "bracketSameLine": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "arrowParentheses": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "none"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
